<div class='row'>
  <div class='large-8 columns panel'>
    <h2>Login</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div><%= f.email_field :email, :autofocus => true %></div>

      <div><%= f.password_field :password %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Ok" %></div>
    <% end %>
  </div>
  <div class='large-4 columns text-center'>
    <h3 class='subheader'>Nuovo utente?</h3>
    <%= link_to 'Registrati', new_user_registration_path, class: 'button large' %>
  </div>
</div>
